<h1>Welcome, <%= current_user.username %>!</h1>

<h3>Events you created:</h3>
<% if @user.organized_events.any? %>
  <ol class="events">
    <%= render @organized_events %>
  </ol>
<% end %>

<h3>All your upcoming events:</h3>

  <ul class="events upcoming_events">
    <%= render @user.attended_events.upcoming %>
  </ul>

<h3>All your past events:</h3>

  <ul class="events past_events">
    <%= render @user.attended_events.past %>
  </ul>


<%= link_to "Create a new event", new_event_path %><br>
